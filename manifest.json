{
    "manifest_version" : 2,
    "name": "Disrespect Detector",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["jquery-2.2.4.min.js", "content.js"]
        }
    ],
    "browser_action": {
        "default_icon": "icon2.png"
    },
    "background": {
        "scripts": ["jquery-2.2.4.min.js", "background.js"]
    },
    "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com; object-src 'self'"
}